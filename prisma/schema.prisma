datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  reviews   Review[]
  createdAt DateTime @default(now())
}

model ProCollaborator {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  profession  String
  area        String
  phone       String?
  photo       String?
  experience  String?
  workPhotos  WorkPhoto[]
  workedAreas WorkedArea[]
  reviews     Review[]
  createdAt   DateTime    @default(now())
}

model WorkPhoto {
  id            Int           @id @default(autoincrement())
  url           String
  proCollaborator ProCollaborator @relation(fields: [proCollaboratorId], references: [id])
  proCollaboratorId Int
}

model WorkedArea {
  id            Int           @id @default(autoincrement())
  name          String
  proCollaborator ProCollaborator @relation(fields: [proCollaboratorId], references: [id])
  proCollaboratorId Int
}

model Review {
  id              Int           @id @default(autoincrement())
  value           Int
  comment         String?
  createdAt       DateTime      @default(now())
  userId          Int
  proCollaboratorId Int
  user            User          @relation(fields: [userId], references: [id])
  proCollaborator ProCollaborator @relation(fields: [proCollaboratorId], references: [id])
}